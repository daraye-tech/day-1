pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "ðŸ“¥ Cloning repository..."
                git url: 'https://github.com/daraye-tech/day-1.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                echo "ðŸ”§ Setting up Python virtual environment and installing dependencies..."
                dir('my-app') {
                    sh '''
                        python3 -m venv venv
                        . venv/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    '''
                }
            }
        }
        stage('Test') {
            steps {
                echo "âœ… Running unit tests..."
                dir('my-app') {
                    sh '''
                        . venv/bin/activate
                        pytest test_app.py
                    '''
                }
            }
        }
        stage('Deliver') {
            steps {
                echo "ðŸš€ Deployment step (placeholder)..."
                sh 'echo "Deployed!"'
            }
        }
    }
}

