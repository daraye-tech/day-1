pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                echo "ðŸ“¥ Cloning repository..."
                git url: 'https://github.com/YOUR_USERNAME/YOUR_REPO.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                echo "ðŸ”§ Installing dependencies..."
                sh 'pip install -r requirements.txt || pip install pytest'
            }
        }
        stage('Test') {
            steps {
                echo "âœ… Running unit tests..."
                sh 'pytest test_app.py'
            }
        }
        stage('Deliver') {
            steps {
                echo "ðŸš€ Deployment step (placeholder)..."
                sh 'echo "Deployed!"'
            }
        }
    }
}
