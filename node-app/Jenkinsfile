pipeline {
    agent {
        docker {
            image 'node:18'
            args '-v /var/run/docker.sock:/var/run/docker.sock' // Allows Docker commands inside container
        }
    }

    environment {
        IMAGE_NAME = "node-app"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Build') {
            steps {
                echo "🔧 Installing dependencies..."
                dir('node-app') {
                    sh 'npm install'
                }
            }
        }

        stage('Build docker image') {
            steps {
                echo "🐳 Building Docker image..."
                dir('node-app') {
                    sh '''
                        docker build -t $IMAGE_NAME:$IMAGE_TAG .
                        docker image ls
                    '''
                }
            }
        }

        stage('Test') {
            steps {
                echo "✅ Running unit tests..."
                dir('node-app') {
                    sh 'npm test || echo "⚠️ No tests yet, skipping..."'
                }
            }
        }

        stage('Deliver') {
            steps {
                echo "🚀 Deployment step (placeholder)..."
                sh 'echo "Deployed!"'
            }
        }
    }
}
